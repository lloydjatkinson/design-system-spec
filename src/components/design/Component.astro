---

<div>
    <span class="flex space-x-3">
        <h4 class="font-bold">{ name }</h4>
        <Status state={ state } />
    </span>
    <span class=" text-gray-900 text-sm">
        { description }
    </span>
    <div class="py-8">
        <slot />
    </div>
    <div>
        <slot name="props" />
    </div>
</div>