---
import clsx from 'clsx';

import Status from '../design/Status.astro';

export interface Props {
    state: 'review' | 'wip' | 'ready' | 'deprecated' | 'experimental';
    name: string;
    description: string;
    layout?: 'none' | 'horizontal' | 'vertical' | 'gridColumns2' | 'gridColumns3' | 'gridColumns4'
};
const { state, name, description, layout = 'horizontal'} = Astro.props as Props;

