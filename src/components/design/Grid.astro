---
import clsx from 'clsx';

export interface Props {
    readonly gap?: OneToFour;
    readonly columns?: OneToFour;
};

type OneToFour = 1 | 2 | 3 | 4;

const { columns = 1, gap = 1 } = Astro.props as Props;

const classes = clsx(
    'grid',
    {
        'grid-cols-1': columns === 1,
        'grid-cols-2': columns === 2,
        'grid-cols-3': columns === 3,
        'grid-cols-4': columns === 4,
    },
    {
        'gap-1': gap === 1,
        'gap-2': gap === 2,
        'gap-3': gap === 3,
        'gap-4': gap === 4,
    },
);
---

<div class={ classes }>
    <slot />
</div>